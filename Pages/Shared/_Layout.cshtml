@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
    @inject UserManager<User> UserManager

        <!DOCTYPE html>
        <html lang="en">

        <head>
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <title>@ViewData["Title"] - hw</title>
            <script type="importmap"></script>
            <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
            <link rel="stylesheet" href="~/hw.styles.css" asp-append-version="true" />
        </head>

        <body class="tw:flex tw:flex-col tw:h-screen">
            <header class=" tw:mb-3">
                <nav
                    class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow tw:py-4 tw:px-8">
                    <div class="container tw:flex tw:justify-between tw:items-center tw:relative">
                        <div class="tw:flex tw:items-center tw:gap-5">
                            <a class="tw:text-2xl tw:tracking-widest tw:text-blue-700 tw:cursor-pointer tw:no-underline"
                                asp-page="/Index">YouVote</a>
                            @if(SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            { <a class="btn btn-primary tw:ml-4" asp-page="/Admin/CreatePoll/Index">Create
                                Poll</a> }
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end tw:gap-5">
                            <div class="tw:flex tw:flex-col tw:sm:flex-row tw:gap-3 tw:items-center">
                                <input type="text" placeholder="Search..." id="filterInput"
                                    class="tw:xl:absolute tw:xl:left-1/2 tw:xl:-translate-x-1/2 tw:xl:w-80 tw:border-b-1 tw:outline-none tw:mr-3">
                                @await Html.PartialAsync("_LoginPartial")
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container tw:grow">
                <main role="main">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted tw:py-4 tw:mt-3">
                <div class="container">
                    &copy; 2025 - hw - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

            @await RenderSectionAsync("Scripts", required: false)
        </body>

        </html>